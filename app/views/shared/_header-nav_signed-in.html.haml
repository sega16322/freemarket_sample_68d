.header__right--content--menu
  = link_to user_likes_path(current_user), class: "user__liked--list header__right--content--menu--list" do
    %i.far.fa-star.header__right--content--icon.fa-lg
    %span お気に入り！一覧
.header__right--content--menu.news__content--link
  = link_to "#", class: "user__news--list header__right--content--menu--list" do
    %i.far.fa-bell.header__right--content--icon.fa-lg
    %span お知らせ
  .news__content.nothice__list
    = render "notifications/notice"
.header__right--content--menu.todo__content--link
  = link_to "#", class: "user__todo--list header__right--content--menu--list" do
    %i.fas.fa-check.header__right--content--icon.fa-lg
    %span やることリスト
  .todo__content.notice__list
    %i.fas.fa-clipboard-check.fa-4x
    %p 現在やることリストはありません
.header__right--content--menu.mypage__content--link
  =  link_to user_path(current_user.id), class: "user__mypage header__right--content--menu--list" do
    = header_icon_image_present?(current_user.account)
    %p マイページ
  .mypage__container
    .mypage__container--top
      = tab_icon_image_present?(current_user.account)
      = tab_background_image_present?(current_user.account)
      = current_user.nickname
      .user__details
        = link_to "#", class: "user__detaild--evaluation user__details--link" do
          %span 評価：１
        = link_to "#", class: "user__detaild--saled user__details--link" do
          %span 出品数：１   
    .mypage__container--menu
      .menu__sales
        = link_to  "#", class: "proceeds__link " do
          %span 売上金
          %i.fas.fa-chevron-right
        = link_to "#", class: "proceeds__link" do
          %span フリマポイント
          %i.fas.fa-chevron-right
      = link_to user_likes_path(current_user), class: "mypage__container--menu--link" do
        %span お気に入り！一覧
        %i.fas.fa-chevron-right    
      = link_to exhibition_items_path, class: "mypage__container--menu--link" do
        %span 出品した商品-出品中
        %i.fas.fa-chevron-right
      = link_to  exhibition_trading_items_path, class: "mypage__container--menu--link" do
        %span 出品した商品-取引中
        %i.fas.fa-chevron-right  
      = link_to "#", class: "mypage__container--menu--link" do
        %span 出品した商品-売却済
        %i.fas.fa-chevron-right  
      = link_to bought_items_path, class: "mypage__container--menu--link" do
        %span 購入した商品-取引中
        %i.fas.fa-chevron-right 
      = link_to "#", class: "mypage__container--menu--link" do
        %span 購入した商品-過去の取引
        %i.fas.fa-chevron-right                         
