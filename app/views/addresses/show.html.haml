.wrapper 
  = render "shared/header"
  .show-contents
    = render "shared/show-contents"
    .content
      .likes__title
        送付先情報確認
      .content__user__information
        .content__user__information__field
          .content__user__information__field__title
            送付先氏名
          .content__user__information__field__body
            = fullname(current_user.address)
        .content__user__information__field
          .content__user__information__field__title
            送付先氏名(カナ)
          .content__user__information__field__body
            = fullname_kana(current_user.address)
        .content__user__information__field
          .content__user__information__field__title
            都道府県
          .content__user__information__field__body
            = current_user.address.prefectures
        .content__user__information__field
          .content__user__information__field__title
            郵便番号
          .content__user__information__field__body
            = postal_code(current_user.address.postal_code)
        .content__user__information__field
          .content__user__information__field__title
            市区町村
          .content__user__information__field__body
            = current_user.address.municipality
        .content__user__information__field
          .content__user__information__field__title
            番地
          .content__user__information__field__body
            = current_user.address.address
        .content__user__information__field
          .content__user__information__field__title
            建物名
          .content__user__information__field__body
            = building(current_user.address.building)
        .content__user__information__field
          .content__user__information__field__title
            電話番号
          .content__user__information__field__body
            = phone_number(current_user.address.phone_number)
  = render "shared/footer-image"
  = render "shared/footer"
  = render "shared/saler-btn"
