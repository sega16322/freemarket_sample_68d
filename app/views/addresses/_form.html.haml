= form_with model: address, id: "edit_address", local: true do |f|
  .field__name
    .field__label
      = f.label '送付先氏名（全角）'
      %span.field__label--require 必須
    .field__area
      .form__zone--left
        .field__form--name
          = f.text_field :last_name, autocomplete: "last_name", placeholder: "例）山田", required: true
      .form__zone
        .field__form--name
          = f.text_field :first_name, autocomplete: "first_name", placeholder: "例）太郎", required: true
  .field__name
    .field__label
      = f.label '送付先氏名（全角カナ）'
      %span.field__label--require 必須
    .field__area
      .form__zone--left
        .field__form--name
          = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例）ヤマダ", required: :true
      .form__zone
        .field__form--name
          = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例）タロウ", required: :true
  .field
    .field__label
      = f.label "郵便番号"
      %span.field__label--require 必須
    .field__form
      = f.text_field :postal_code, placeholder: "7ケタの半角英数字", required: :true
  .field
    .field__label
      = f.label "都道府県"
      %span.field__label--require 必須
    .field__form
      = f.select :prefectures, Address.prefectures.keys, include_blank: "選択してください", required: :true
  .field
    .field__label
      = f.label "市区町村"
      %span.field__label--require 必須
    .field__form
      = f.text_field :municipality, placeholder: "例）〇〇市", required: :true
  .field
    .field__label
      = f.label "町名・番地"
      %span.field__label--require 必須
    .field__form
      = f.text_field :address, placeholder: "例）〇〇町1-1-1", required: :true
  .field
    .field__label
      = f.label "建物名・部屋番号"
      %span.field__label--any 任意
    .field__form
      = f.text_field :building, placeholder: "例）〇〇ビル101"
  .field
    .field__label
      = f.label "電話番号"
      %span.field__label--any 任意
    .field__form
      = f.text_field :phone_number, placeholder: "半角数字で10桁または11桁の番号"
  .actions
    = f.submit "変更する", class: "change__address__btn"