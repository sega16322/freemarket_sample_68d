.wrapper 
  = render "shared/header"
  .show-contents
    = render "shared/show-contents"
    .content
      .likes__title
        メール/パスワード
      .content__edit__user
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },builder:FormHelper::FormWithErrorMessageBuilder) do |f|
          .field
            .field__label
              = f.label :email
              %span.field__label--require 必須
            .field__form
              = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          .field__pw
            .field__label
              = f.label :current_password
              %span.field__label--require 必須
            .field__form
              = f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力"
          .field__pw
            .field__label
              = f.label "新しいパスワード"
              %span.field__label--require 必須
            .field__form
              = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
            .field__form
              = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力"
            .pw__checkbox.edit__pw__checkbox
              %input{ type: "checkbox", id: "checkpw" }
                パスワードを表示する
          .actions
            = f.submit "変更する", class: "change__btn"
  = render "shared/footer-image"
  = render "shared/footer"
  = render "shared/saler-btn"
